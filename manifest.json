{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "description": "A simple Firefox extension example",
  "permissions": [
      "notifications",
      "contextMenus",
      "commands",
      "activeTab",
      "storage",
      "tabs",
      "browser_action",
      "https://api.openai.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
        "explainWithGPTCommand": {
          "suggested_key": {
            "default": "Alt+Shift+U",
            "mac": "Alt+Shift+U"
          }
        }
    },
    "browser_action": {
        "default_title": "GPT Translator",
        "default_icon": {
            "64": "icon64.png"
        },
        "default_popup": "popup.html"
    }
}
